"""
이프로그램은 최저성적과 최고성적을 산출해내는 프로그램입니다

"""
engtop=engmin=mathtop=mathmin=0
name=eng=math=topAvg=topName=n=0
minimum=wait=wait2=wait3=minimumname=0
mathtopname=engtopname=mathminname=engminname=0
def readData() :
    global name, eng, math
    name=input("이름: ") ; eng=int(input("영어 성적: ")) ; math=int(input("수학 성적: "))
    
def getAvg(eng, math, n) :
    return((eng+math) / n)

def getGrade(score) :
    if score>=90 :  return('A')
    elif score>=80 :  return('B')
    elif score>=70 :  return('C')
    elif score>=60 :  return('D')
    else :  return('F')

def printTitle() :
    print("-"*53)
    print(" 이  름\t\t영어\t수학\t총점\t평균\t학점")
    print("-"*53)

def printRecord(name, subj1, subj2, mean, level) :
    print(" %s\t\t%3d\t%3d\t%3d\t%.2f\t%2c" % (name, subj1,subj2, \
           subj1+subj2, mean, level))
    print("-"*53)

def processOne() :
    global avg, grade, wait
    readData()
    avg = getAvg(eng, math, 2)
    grade = getGrade(avg)
    printTitle()
    printRecord(name, eng, math, avg, grade)


print("\n프로그램 시작")


# 첫 번째 학생 성적 처리
print("첫번째 학생 성적 처리"  )
processOne() ; topAvg = avg ;  topName = name; wait=avg ; mathtop=math; engtop=eng
wait2=math
wait3=eng
data=0
#임의의 숫자의 학생의 성적을 받아냄
while True:
    data=input("성적을 입력하시려면 'enter' 종료하시려면'q'입력")
    if data=='q':
        break
    else:
        processOne()
        if topAvg < avg :
            topAvg = avg ; topName = name 
        elif avg<wait:
            minimum=avg ;minimumname=name
        maxmath=max(mathtop,math)
        
        if math<mathtop
        =min(wait2,math)
        
print(mathmin,mathminname)
print(mathtop,mathtopname)
print("\n최고 평균 : %6.2f(%s)" % (topAvg,topName))
print("\n최저 평균 : %6.2f(%s)" % (minimum,minimumname))


print("\n프로그램 종료")
